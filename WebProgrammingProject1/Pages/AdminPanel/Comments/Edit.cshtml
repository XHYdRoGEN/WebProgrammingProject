@page
@model WebProgrammingProject1.EditComments

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Shared/_LayoutProfile.cshtml";
}

<h3>Düzenle</h3>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Comments.CommentID" />
            <div class="form-group">
                <label asp-for="Comments.CommentContent" class="control-label"></label>
                <input asp-for="Comments.CommentContent" class="form-control" />
                <span asp-validation-for="Comments.CommentContent" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-success" asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
